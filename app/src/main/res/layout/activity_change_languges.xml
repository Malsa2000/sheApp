<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ChangeLanguges">

    <ImageView
        android:layout_width="300dp"
        android:src="@drawable/img_4"
        android:layout_gravity="center"
        android:layout_height="200dp"/>

    <TextView
        android:layout_width="300dp"
        android:padding="10dp"
        android:text="@string/languges_avalible"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:id="@+id/question1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/arrabic_languges"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:text="Arabic "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>

            <ImageView
                android:padding="10dp"
                android:layout_width="50dp"
                android:src="@drawable/icon_sad"
                android:layout_height="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/english_languges"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:text="English "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:padding="10dp"
                android:layout_width="50dp"
                android:src="@drawable/icon_sad"
                android:layout_height="50dp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/fransh_languges"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:text="Fransh  "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:padding="10dp"
                android:layout_width="50dp"
                android:src="@drawable/icon_searsh"
                android:layout_height="50dp"/>
        </LinearLayout>

    </RadioGroup>


    <Button
        android:id="@+id/change_languges"
        android:layout_width="300dp"
        android:background="@drawable/rectangel_baby_pink"
        android:layout_margin="30dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="Change"
        android:layout_height="50dp"/>
</LinearLayout>