<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context=".width.goodWidth">

    <LinearLayout
        android:layout_width="260dp"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:background="@drawable/width_view"
        android:layout_gravity="center"
        android:layout_height="250dp">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="150dp"
            android:rotation="0"
            android:background="@drawable/circel_green"
            android:layout_marginTop="55dp"
            android:scaleType="centerCrop"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:src="@drawable/exersise_white_4"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/width_view_rec"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/lenght"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <SeekBar
                android:id="@+id/lenght"
                android:indeterminate="false"

                android:min="20"
                android:max="250"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

<TextView
    android:id="@+id/text_lenght"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:textSize="15dp"
    android:textColor="@color/gray"
    android:text="0"
    android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="@color/gray"
                android:text="@string/cm"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/whigth"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <SeekBar
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_alignParentLeft="true"
                android:max="180"
                android:indeterminate="false"
                android:min="1"
                android:layout_height="60dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_width"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="@color/gray"
                android:text="0"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="@color/gray"
                android:text="@string/kg"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
    android:id="@+id/calclate_width"
    android:background="@drawable/rectangel_blue"
         android:text="@string/calclate"
            android:gravity="center"
         android:textSize="20dp"
            android:layout_width="300dp"
            android:textStyle="bold"
         android:textColor="@color/white"
         android:layout_marginTop="70dp"
         android:layout_gravity="center"
    android:layout_height="60dp"/>


    </LinearLayout>


</LinearLayout>