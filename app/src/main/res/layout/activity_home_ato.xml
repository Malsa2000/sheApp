<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeAto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/enable"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:text="Enable"
        android:textColor="@color/pink"
        android:layout_height="wrap_content"/>


    <TextView
        android:text="name Bluttoth"
        android:layout_margin="20dp"
        android:textColor="@color/pink"
        android:id="@+id/name_bluttoth"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/visble"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:text="visable"
        android:textColor="@color/pink"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/sresh_bt"
        android:layout_gravity="center"
        android:src="@drawable/icon_bluetooth"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <ListView
        android:id="@+id/bluttotn_device"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:layout_height="200dp"/>

    <EditText
        android:id="@+id/text"
        android:inputType="number"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:background="@drawable/pink_border_rect"
        android:layout_marginTop="20dp"
        android:hint="enter number one"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/submit"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="SEND"
        android:textSize="20dp"
        android:background="@drawable/rectangel_baby_pink"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>
</LinearLayout>