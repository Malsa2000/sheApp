<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Note.NoteAdd">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:text="@string/add_new"
        android:textColor="@color/purple_200"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="5dp"
        android:text="@string/note_add_small"
        android:textColor="@color/gray"
        android:textSize="13dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-10dp"
        android:fontFamily="casual"
        android:padding="10dp"
        android:text="@string/add_event_name"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rec_peuple2"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_add_note" />

        <EditText
            android:id="@+id/note_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/add_event_name"
            android:textColor="@color/gray"
            android:textSize="13dp" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-10dp"
        android:fontFamily="casual"
        android:padding="10dp"
        android:text="@string/add_event_desc"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rec_peuple2"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_add_note" />

        <EditText
            android:id="@+id/note_descrapition"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:hint="@string/add_event_desc"
            android:padding="20dp"
            android:textColor="@color/gray"
            android:textSize="13dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-10dp"
        android:fontFamily="casual"
        android:padding="10dp"
        android:text="@string/add_event_date"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rec_peuple2"
        android:orientation="horizontal"
        android:padding="5dp">

        <CalendarView
            android:id="@+id/calender"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:padding="1dp"
            android:theme="@style/CalenderViewCustom" />
    </LinearLayout>

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20dp" />


    <Button
        android:id="@+id/add_note"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:background="@drawable/icon_add_note" />

    <Button
        android:id="@+id/view"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:background="@drawable/icon_add_note" />

</LinearLayout>