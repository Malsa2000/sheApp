<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Note.NoteView">

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/prpele"
        android:paddingLeft="20dp"
        android:paddingTop="50dp"
        android:paddingRight="20dp"
        android:text="@string/add_new"
        android:textSize="20dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/gray"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:text="@string/note_add_small"
        android:textSize="13dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:textColor="@color/gray"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="13dp"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_event"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="500dp"
        tools:listitem="@layout/my_row_note" />

    <LinearLayout
        android:id="@+id/add_new_note"
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/group_pruple"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

<!--        <ImageView-->
<!--            android:layout_width="50dp"-->
<!--            android:src="@drawable/icon_add_note"-->
<!--            android:layout_height="50dp"/>-->
        <TextView
            android:textSize="15dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="@string/add_new"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>