<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HairCare.ResultHairCare">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-70dp"
        android:background="@drawable/hair_background"
        android:layout_height="match_parent">



        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/image_result_type"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/cir_green"
            android:layout_marginTop="140dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/hair1" />


        <TextView
            android:id="@+id/text_result_type"
            android:layout_width="wrap_content"
            android:text="Great, you have oily skin"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="80dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/apple_decription"
            android:textSize="15dp"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/skin_button"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:scaleType="center"
            android:text="ok!"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/rect_white"
            android:layout_height="50dp"/>
    </LinearLayout>
</LinearLayout>