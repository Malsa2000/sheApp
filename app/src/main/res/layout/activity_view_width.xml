<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".width.viewWidth">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/group9"
        android:layout_gravity="center"
        android:layout_height="60dp">
    <TextView
        android:textSize="20dp"
        android:text="@string/witdth_view"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/width_num"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:padding="2dp"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="70dp"
        android:text="20"
        android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:text="@string/kg"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:padding="2dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="90dp"
            android:src="@drawable/thin"
            android:layout_height="150dp"/>

        <TextView
            android:id="@+id/thin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:padding="2dp"
            android:text="@string/thin"
            android:textSize="20dp" /></LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="90dp"
                android:src="@drawable/normal"
                android:layout_height="150dp"/>

            <TextView
                android:id="@+id/normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:padding="2dp"
                android:textColor="@color/black"
                android:text="@string/normal"
                android:textSize="20dp" /></LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="90dp"
                android:padding="10dp"
                android:src="@drawable/fit"
                android:layout_height="150dp"/>

            <TextView
                android:id="@+id/fit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:padding="2dp"
                android:text="@string/fit"
                android:textSize="20dp" /></LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="90dp"
                android:src="@drawable/very_fit"
                android:layout_height="150dp"/>

            <TextView
                android:id="@+id/very_fit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:padding="2dp"
                android:text="@string/very_fit"
                android:textSize="20dp" /></LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/rectangel_11blue"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="@string/body_shape"
            android:textColor="@color/white"
            android:textSize="17dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/shape_apple"
        android:layout_width="150dp"
        android:background="@drawable/rec_white"
        android:src="@drawable/apple_shape"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:layout_marginRight="30dp"
        android:layout_height="150dp"/>
    <ImageView
        android:id="@+id/shape_clock"
        android:layout_width="150dp"
        android:background="@drawable/rec_white"
        android:src="@drawable/clock_shap"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:layout_marginRight="30dp"
        android:layout_height="150dp"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/shape_sequre"
            android:layout_width="150dp"
            android:background="@drawable/rec_white"
            android:src="@drawable/recte_shap"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:layout_marginRight="30dp"
            android:layout_height="150dp"/>
        <ImageView
            android:id="@+id/shape_pear"
            android:layout_width="150dp"
            android:background="@drawable/rec_white"
            android:src="@drawable/pean_shap"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:layout_marginRight="30dp"
            android:layout_height="150dp"/>
    </LinearLayout>
    </LinearLayout>



</LinearLayout>