    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:background="@drawable/back_main"
        android:layout_height="wrap_content">
<ImageView
    android:layout_marginTop="10dp"
    android:layout_width="150dp"
    android:scaleX="2.5"
    android:layout_gravity="center"
    android:src="@drawable/rectangel_blue"
    android:layout_height="10dp"/>

        <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
            android:layout_marginLeft="5dp"
                    android:fontFamily="cursive"
                    android:gravity="start"
                    android:text="all catogrical in appliaction !"
                    android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:orientation="horizontal"
            android:background="@drawable/group_main"
            android:layout_height="300dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/skin_care_main"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="-10dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="80dp"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/skincare22"
                        android:layout_height="80dp"/>

                    <TextView
                        android:layout_width="150dp"
                        android:text="@string/skin_care"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginTop="-10dp"
                        android:textColor="@color/pink"
                        android:textSize="15dp"
                        android:layout_height="50dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/width_care_main"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@drawable/sport"
                        android:layout_height="80dp"/>

                    <TextView
                        android:layout_width="150dp"
                        android:text="@string/wighth_per"
                        android:gravity="center"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginTop="-20dp"
                        android:textColor="@color/blue"
                        android:textSize="15dp"
                        android:layout_height="60dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_atomation_main"
                android:layout_width="wrap_content"
                android:layout_marginTop="100dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/home_atomation"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_width="100dp"
                    android:text="Home
                    Atomation"
                    android:gravity="center"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginTop="-10dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_height="50dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="0dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/hire_care_main"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="-10dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="80dp"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/haircare22"
                        android:layout_height="80dp"/>

                    <TextView
                        android:layout_width="150dp"
                        android:text="@string/hair_care"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginTop="-10dp"
                        android:textColor="@color/green"
                        android:textSize="15dp"
                        android:layout_height="50dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/note_care"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_gravity="center"
                        android:src="@drawable/note"
                        android:padding="20dp"
                        android:layout_height="80dp"/>

                    <TextView
                        android:layout_width="150dp"
                        android:text="@string/note"
                        android:gravity="center"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginTop="-10dp"
                        android:textColor="@color/prpele"
                        android:textSize="15dp"
                        android:layout_height="50dp"/>
                </LinearLayout>
            </LinearLayout>
                <TextView
                    android:id="@+id/skin_care"
                    android:layout_width="150dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="@string/skin_care"
                    android:textColor="#E91E63"
                    android:padding="0dp"
                    android:background="@color/white"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/hire_care"
                    android:layout_width="150dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="@string/hair_care"
                    android:textColor="#000"
                    android:layout_marginLeft="70dp"
                    android:background="#D3D3D3"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/width_care"
                        android:layout_width="150dp"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:text="@string/wighth_per"
                        android:textColor="#E91E63"
                        android:layout_marginTop="25dp"
                        android:padding="20dp"
                        android:background="#FBF9F9"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/note"
                        android:layout_width="150dp"
                        android:layout_marginTop="25dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="@string/note"
                        android:textColor="#000"
                        android:padding="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="#D3D3D3"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
    </LinearLayout>
</LinearLayout>